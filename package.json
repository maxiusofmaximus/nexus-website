{
  "name": "nexusengine-website",
  "version": "1.0.0",
  "description": "Sitio web oficial de NexusEngine - Motor de juegos universal",
  "main": "public/index.html",
  "scripts": {
    "start": "http-server public -p 8080",
    "dev": "live-server public --port=8080",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/*.css -d public/css",
    "build:js": "webpack --mode production",
    "test": "jest",
    "lint": "eslint src/",
    "preview": "http-server public -p 3000"
  },
  "keywords": [
    "nexus-engine",
    "website",
    "game-development",
    "landing-page",
    "documentation"
  ],
  "author": "Pedro Abelardo (Maxius) - Nexus",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxiusofmaximus/nexus-website.git"
  },
  "homepage": "https://github.com/maxiusofmaximus/nexus-website",
  "dependencies": {
    "bootstrap": "^5.3.1",
    "font-awesome": "^4.7.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "postcss": "^8.4.27",
    "postcss-cli": "^10.1.0",
    "jest": "^29.6.2",
    "eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}